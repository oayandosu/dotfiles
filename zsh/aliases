# clear
alias c='clear'

# Development
alias dev='cd /Users/oayandosu/Development'

# Finder
alias o='open'
alias o.='open .'

# Homebrew
alias install='brew install'

# TMUX
alias t='TERM=screen-256color-bce tmux -u -2'

# zshrc
alias reload='source ~/.zshrc && echo "Reoladed ~/.zshrc"'

# Dotfiles
alias dots='vim ~/dotfiles'
alias redot='cd ~/dotfiles && make && reload && cd ~'

# Sanitary
alias rmsvn='rm -rf `find . -type d -name ".svn"`'
alias rmds='rm -rf `find . -name ".DS_Store"`'

